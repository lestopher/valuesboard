<div class="row">
  <div class="col-xs-5 col-xs-offset-3">
    <h1><%=@value.name%></h1>
  </div>
  <div class="col-xs-1 header-right">
    <%= link_to '+ Story', new_story_path, :class=>"btn btn-primary" %>
  </div>
</div>    
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <p><%=@value.description%></p>
  </div>
  <% @value.stories.each do |s| %>
    <div class="col-xs-6 col-xs-offset-3">
      <div>
        <p><i><%= s.created_at.strftime("Shared on %B %d, %Y") %></i></p>
        <p class="story"><%= s.text.html_safe %></p>
      </div>
    </div> 
  <% end %>
</div>
